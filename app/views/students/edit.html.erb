<h1>Edit a student!</h1>
<%=form_for @student do |f|%>
<label>Name: </label>
<%=f.text_field :name%>
<br>
<label>Age: </label>
<%=f.number_field :age%>
<br>
<label>School: </label>
<%=f.collection_select :school_id, @schools, :id, :name%>
<br>
<%=f.submit "Edit Student"%>
<br>
<%=button_to "Delete Student", delete_student_path(@student.id), method: "delete"%>
<%end%>